	<Window.Styles>
		<Style Selector="TextBlock.Error">
			<Setter Property="Foreground" Value="Red" />
		</Style>
		<Style Selector="HeaderedContentControl">
			<Setter Property="Template">
				<ControlTemplate>
					<Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
						<DockPanel>
							<ContentPresenter TextBlock.FontWeight="Bold" DockPanel.Dock="Top" Content="{TemplateBinding Header}" />
							<ContentPresenter Content="{TemplateBinding Content}" />
						</DockPanel>
					</Border>
				</ControlTemplate>
			</Setter>
		</Style>
		<Style Selector="Viewbox:disabled">
			<Setter Property="Opacity" Value="0.5"></Setter>
        </Style>
	</Window.Styles>

	<DockPanel>
		<TextBlock Classes="Error" Text="{Binding Errors^}" DockPanel.Dock="Bottom" />

		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="Open" Command="{Binding Open}" />
			</MenuItem>
		</Menu>

		<StackPanel Orientation="Horizontal" DockPanel.Dock="Top">

            <StackPanel Orientation="Horizontal" Margin="20 0" DataContext="{Binding Debugger}" DockPanel.Dock="Top">
				<Button Command="{Binding Play}" IsVisible="{Binding Play.CanExecute^}" HotKey="F5">
					<Viewbox Width="15" Height="15">
						<Path Fill="Black" Data="{StaticResource Play}" />
					</Viewbox>
				</Button>
				<Button Command="{Binding Step}" HotKey="F10" IsVisible="{Binding !Play.CanExecute^}" >
                    <Viewbox Width="15" Height="15">
                        <Path Fill="Black" Data="{StaticResource ForwardStep}" />
                    </Viewbox>
                </Button>
				<Button Command="{Binding Stop}" IsVisible="{Binding !Play.CanExecute^}">
                    <Viewbox Width="15" Height="15">
                        <Path Fill="Black" Data="{StaticResource Stop}"  />
                    </Viewbox>
                </Button>
			</StackPanel>

            <!--<Panel Margin="20 0" IsVisible="{Binding !Debugger.IsDebugging^}" >
                <Button IsVisible="{Binding !Processor.Run.IsExecuting^}" Command="{Binding Processor.Run}" HotKey="F5">Run without debug</Button>
                <Button IsVisible="{Binding Processor.Run.IsExecuting^}" Command="{Binding Processor.Stop}">
                    <Viewbox Width="15" Height="15">
                        <Path Fill="Black" Data="{StaticResource Stop}"  />
                    </Viewbox>
                </Button>
            </Panel>-->

        </StackPanel>

		<Grid ColumnDefinitions="* Auto Auto">
			<HeaderedContentControl Grid.Column="0" BorderBrush="Black" BorderThickness="1">
				<views:Editor IsReadOnly="{Binding Debugger.IsDebugging^}" CurrentLine="{Binding Debugger.CurrentLine^}" Code="{Binding Source, Mode=TwoWay}" MinWidth="400" />
			</HeaderedContentControl>
			<GridSplitter Margin="3 0" Grid.Column="1"
                          Background="{StaticResource SystemControlForegroundChromeMediumBrush}"
                          VerticalAlignment="Stretch" Width="5" />
			<Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" DockPanel.Dock="Right">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition MaxHeight="400" />
					</Grid.RowDefinitions>
					<HeaderedContentControl Header="CPU">
						<DataGrid Items="{Binding Registers^.Values}">
							<DataGrid.Columns>
								<DataGridTextColumn CanUserSort="False" IsReadOnly="True" Binding="{Binding Name}"
                                                    Header="Name" />
								<DataGridTextColumn CanUserSort="False"
                                                    IsReadOnly="True"
                                                    Binding="{Binding Value, StringFormat='{}{0:X4}'}"
                                                    Header="Value" />
								<DataGridTextColumn CanUserSort="False" IsReadOnly="True"
                                                    Binding="{Binding Hi, StringFormat='{}{0:X2}'}"
                                                    Header="Hi" />
								<DataGridTextColumn CanUserSort="False" IsReadOnly="True"
                                                    Binding="{Binding Lo, StringFormat='{}{0:X2}'}"
                                                    Header="Lo" />
							</DataGrid.Columns>
						</DataGrid>
					</HeaderedContentControl>
					<HeaderedContentControl Grid.Row="1" Header="Memory" DockPanel.Dock="Bottom">
						<DataGrid Items="{Binding Memory^}">
							<DataGrid.Columns>
								<DataGridTextColumn x:DataType="vm:MemoryViewModel" CanUserSort="False"
                                                    Header="Location" IsReadOnly="True" Binding="{Binding Location}" />
								<DataGridTextColumn x:DataType="vm:MemoryViewModel" CanUserSort="False" Header="Value"
                                                    IsReadOnly="True"
                                                    Binding="{Binding Value, StringFormat='{}{0:X4}'}" />
							</DataGrid.Columns>
						</DataGrid>
					</HeaderedContentControl>
				</Grid>
			</Border>
		</Grid>
	</DockPanel>
</Window>